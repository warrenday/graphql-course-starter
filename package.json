    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.22.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^16.18.119",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "framer-motion": "^11.11.17",
    "graphql": "^16.9.0",
    "graphql-import-node": "^0.0.5",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.2",
    "react-router-dom": "^6.28.0",
    "react-scripts": "5.0.1",
    "start": "^5.1.0",
    "tsx": "^4.19.2",
    "typescript": "^4.9.5",
    "zod": "^3.23.8"
  },
  "scripts": {
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start:client": "react-scripts start",
    "start:server": "tsx watch server/index.ts",
    "migrate": "prisma migrate dev --schema=./server/prisma/schema.prisma",
    "codegen": "graphql-codegen --config codegen.ts && npx prisma generate --schema=./server/prisma/schema.prisma",
    "seed": "rm -f server/prisma/dev.db && npm run migrate && tsx server/prisma/seed.ts"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typescript-operations": "^4.3.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15"
  }
